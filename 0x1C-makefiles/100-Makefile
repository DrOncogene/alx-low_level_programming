# _*_Makefile_*_

CC = gcc
SRC = school.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%: m.h

.PHONY: clean
clean:
	$(RM) -f *.swp *.swx *\# *~ $(NAME)

.PHONY: oclean
oclean:
	$(RM) -f $(OBJ)

.PHONY: fclean
fclean: clean oclean

.PHONY: re
re: oclean all
